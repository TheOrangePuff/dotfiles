# Config for storing dotfiles in git
alias config='/usr/bin/git --git-dir=$HOME/.cfg/ --work-tree=$HOME'

# Use neovim
alias vim='nvim'
alias vi='nvim'
alias v='nvim'

# Pacman
alias pu='paru'

# Git
alias tree='git log --all --decorate --oneline --graph'

# Make directory
alias md='mkdir'

# Edit hosts file
alias hosts='sudo $EDITOR /etc/hosts'

# bc - An arbitrary precision calculator language
function =
{
    echo "$@" | bc -l
}

alias calc="="

# Scratchpad
alias scratch="$EDITOR ~/scratch.txt"
alias pad="scratch"

# Grab any aliases in the non version controlled alias file
source "$HOME/.config/no_vc_aliasrc" 2> /dev/null
